<!--nameSpace：主要用于区分不同mapper-->
<mapper nameSpace="mapper.PersonMapper">

    <cache />
    <!--sql全局唯一id：nameSpace + . + sqlId组成：statementId-->
    <!--id: nameSpace下sql唯一标识-->
    <!--parameterType：请求参数类型-->
    <!--resultType：结果集类型-->
    <select id="selectOne" resultType="model.Person" parameterType="model.Person">
        select t.* from person t where t.id = #{id} and t.name = #{name}
    </select>

    <select id="selectList" resultType="model.Person">
        select t.* from person t
    </select>

    <update id="updatePerson" parameterType="model.Person">
        update person t set t.age = #{age}, t.sex = #{sex} where t.id = #{id} and t.name = #{name}
    </update>

    <delete id="deletePerson" parameterType="model.Person">
        delete from person where id = #{id} and name = #{name}
    </delete>

    <insert id="insertPerson" parameterType="model.Person">
        INSERT INTO `person` (`name`, `age`, `sex`, `id`) VALUES (#{name}, #{age}, #{sex}, #{id})
    </insert>
</mapper>